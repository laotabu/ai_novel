{
  "name": "context-client",
  "version": "1.0.0",
  "description": "上下文管理Electron客户端",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "context",
    "management",
    "electron",
    "gui"
  ],
  "author": "Context Client",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.13.4"
  },
  "build": {
    "appId": "com.context.client",
    "productName": "上下文管理客户端",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
